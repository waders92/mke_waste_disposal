@model IEnumerable<MKEWasteDisposal.Models.Customer>



<div class="top-buffer">
    @using (Html.BeginForm())
    {
        <b class="search-box">Pick a day &nbsp;</b><br />
            @Html.RadioButton("option", "Monday")<text> Monday</text><br />
            @Html.RadioButton("option", "Tuesday")<text> Tuesday</text><br />
            @Html.RadioButton("option", "Wednesday")<text> Wednesday</text><br />
            @Html.RadioButton("option", "Thursday")<text> Thursday</text><br />
            @Html.RadioButton("option", "Friday")<text> Friday</text><br />

            <b class="search-box">Enter ZipCode: &nbsp;</b>
            @Html.TextBox("zipCode")<input type="submit" value="Search" />
    }
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table top-buffer">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Schedule.PickUpFrequency)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.StreetAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Schedule.PickUpFrequency)
        </td>
@if (User.IsInRole("Admin"))
{
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
    </td>
}
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.CustomerID }) 
    </td>
   
    </tr>
}

</table>
